{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "$": true,
        "jQuery": true,
        "window": true,
        "firebase": true,
        "amd": true,
        "document": true,
        "jasmine": true,
        "describe": true,
        "it": true,
        "spyOn": true,
        "expect": true,
        "beforeEach": true,
        "localStorage": true,
        "sessionStorage": true,
        "require": true
    }
}